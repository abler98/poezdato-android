<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/timetable_item_padding"
    android:weightSum="1">

    <TextView
        android:id="@+id/trainNumber"
        style="?attr/timetablePrimaryTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        tools:text="6006" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/originTime"
            style="?attr/timetablePrimaryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="04.42" />

        <TextView
            android:id="@+id/originName"
            style="?attr/timetableSecondaryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Южный Пост" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/destinationTime"
            style="?attr/timetablePrimaryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="05.14" />

        <TextView
            android:id="@+id/destinationName"
            style="?attr/timetableSecondaryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Безруковка" />

    </LinearLayout>

    <TextView
        android:id="@+id/duration"
        style="?attr/timetablePrimaryTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        tools:text="32 м" />

</LinearLayout>
